#!/bin/sh

# necessary to load scripting-addition during startup on macOS Big Sur
# *yabai --load-sa* is configured to run through sudo without a password
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"


# Follow this guide whrn updating yabai to latest version
# https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#updating-to-the-latest-release

# global settings
yabai -m config mouse_follows_focus          on
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_shadow                float
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 on
yabai -m config mouse_modifier                fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config external_bar                 all:27:0
yabai -m config layout                       bsp
yabai -m config top_padding                  15
yabai -m config bottom_padding               15
yabai -m config left_padding                 15
yabai -m config right_padding                15
yabai -m config window_gap                   15

# Border configuration
yabai -m config window_border                on
yabai -m config window_border_width          6
yabai -m config active_window_border_color   0xffd3869b
yabai -m config normal_window_border_color   0x00444444
border_ignored_apps="(IntelliJ IDEA|WebStorm|RubyMine|VLC|AppCleaner"
border_ignored_apps+="|System Preferences|Untitled|Authy Desktop)"
yabai -m rule --add title="${border_ignored_apps}" border=off
yabai -m rule --add app="${border_ignored_apps}" border=off

yabai -m space 1 --label "browser"
yabai -m space 2 --label "vscode"
yabai -m space 3 --label "jetbrains"
yabai -m space 4 --label "terminal"
yabai -m space 5 --label "music"
yabai -m space 6 --label "social"
yabai -m space 8 --label "notes"

# Space 1
yabai -m rule --add app="^Google Chrome$" space=^browser

# Space 2
yabai -m rule --add app="^(Code|RStudio)$" space=^vscode

# Space 3
apps="^(IntelliJ IDEA|WebStorm|RubyMine|PyCharm|DataGrip)$" # regex that matches JetBrains apps
# Don't manage Jetbrains applications automatically
yabai -m rule --add app="${apps}" space=^3 manage=off
# Tile the main Jetbrains IDE window and float everything else
yabai -m signal --add event=window_created app="${apps}" \
    action='~/Personal/dotfiles/yabai/jetbrains.sh'

# Space 4
yabai -m rule --add app="^(Alacritty)$" space=^terminal

# Space 5
yabai -m rule --add app="^(Spotify)$" space=^music

# Space 6
# WARNING: Do not use ^ when assigning space. Teams and WhatsApp create windows
# in all spaces which can cause yabai to refocus to space 6 when switching to
# another space
yabai -m rule --add \
    label="social_rule" \
    app="^(Slack|WhatsApp|Microsoft Teams|Rambox)$" \
    space=social

# Space 7
yabai -m rule --add \
    label="misc_rule" \
    app="^(Robo 3T|Postman|Persepolis Download Manager|NordVPN IKE)$" \
    space=^7
yabai -m rule --add app="Android File Transfer" space=7

# Space 8
yabai -m rule --add app="^(Notion|Notable|Notes)$" space=^notes

# Unmanaged apps
app_titles="(Copy|Bin|About This Mac|Info|Finder Preferences|Preferences"
app_titles+="|QuickTime Player|Stickies)"
yabai -m rule --add title="${app_titles}" manage=off

app_names="^(Calculator|Authy Desktop|Postgres|VLC|System Preferences|IINA"
app_names+="|iMazing HEIC Converter|AppCleaner|Stickies|1Password 7|VeraCrypt"
app_names+="|Tunnelblick|WireGuard)$"
yabai -m rule --add app="${app_names}" manage=off

# Tries to focus the window under the cursor whenever the MS teams notification gains focus
# Probably conflicts with mouse follows focus in some ways
yabai -m signal --add \
    event=window_focused \
    app='^Microsoft Teams$' \
    title='^Microsoft Teams Notification$' \
    action='yabai -m window --focus next > /dev/null 2>&1'

# Focus window under cursor when an application is hidden
yabai -m signal --add event=application_hidden \
    action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

# Focus window under cursor when a window is destroyed
yabai -m signal --add event=window_destroyed \
    action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

# Focus window under cursor when an application is terminated
yabai -m signal --add event=application_terminated \
    action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

# Rearrange windows when a new display is added
yabai -m signal --add event=display_added \
    action="$HOME/.config/yabai/rearrange.sh add"

# Rearrange windows when a display is removed
yabai -m signal --add event=display_removed \
    action="$HOME/.config/yabai/rearrange.sh remove"

yabai -m signal --add event=space_changed \
    action="$HOME/.config/yabai/rearrange.sh toggle_border"
